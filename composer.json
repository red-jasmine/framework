{
    "name": "red-jasmine/framework",
    "autoload": {
        "psr-4": {}
    },
    "authors": [
        {
            "name": "liushoukun",
            "email": "liushoukun66@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {},
    "require-dev": {
        "php": "^8.3",
        "red-jasmine/support": "1.0.x-dev",
        "red-jasmine/filament-core": "1.0.x-dev",
        "red-jasmine/order": "1.0.x-dev",
        "red-jasmine/payment": "1.0.x-dev",
        "red-jasmine/socialite": "1.0.x-dev",
        "pestphp/pest": "^2.30",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "brianium/paratest": "^7.3",
        "orchestra/testbench": "9.x-dev"
    },
    "autoload-dev": {
        "psr-4": {
            "RedJasmine\\Tests\\": "tests",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "./packages/*",
            "options": {
                "symlink": true
            }
        }
    ],
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare",
            "@dusk:install-chromedriver"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve --ansi"
        ],
        "lint": [
            "@php vendor/bin/phpstan analyse --verbose --ansi"
        ],
        "test": [
            "@php vendor/bin/pest"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    }
}
